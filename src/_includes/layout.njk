<!DOCTYPE HTML>
<html lang="ko">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>{{ title }} | nemorize.me</title>

    {% if summary %}{% set description = summary %}
    {% else %}{% set description = '@nemorize (Ji Yong, Kim)' %}{% endif %}

    <meta name="description" content="{{ description }}" />
    {% if tags %}<meta name="keywords" content="{{ categories | join(',') }}" />{% endif %}

    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content="{{ title }} | nemorize.me" />
    <meta name="twitter:description" content="{{ description }}" />
    <meta name="twitter:image" content="https://nemorize.me{{ page.url }}opengraph.png" />

    {% if page.url == '/' %}{% set ogType = 'website' %}
    {% else %}{% set ogType = 'article' %}
    <meta property="og:type" content="{{ ogType }}" />
    <meta property="og:site_name" content="nemorize.me" />
    <meta property="og:locale" content="ko_KR" />
    <meta property="og:url" content="https://nemorize.me{{ page.url }}" />
    <meta property="og:title" content="{{ title }} | nemorize.me" />
    <meta property="og:description" content="{{ description }}" />
    <meta property="og:image" content="https://nemorize.me{{ page.url }}opengraph.png" />
    <meta property="og:image:width" content="600" />
    <meta property="og:image:height" content="600" />

    <link rel="stylesheet" href="/assets/css/base.css" />
    <link rel="stylesheet" href="/assets/css/main.css" />

    <script async src="https://www.googletagmanager.com/gtag/js?id=G-34S1EPYV9Z"></script>
